body{
    position: relative;
    padding: 0;
	margin: 0;
    background-image:url("./login.png");
    background-repeat: no-repeat;
    width:1200px;
}

#image{
    min-height: 100%;
    min-width: 1024px;
        
    /* Set up proportionate scaling */
    width: 40%;
    height: auto;
        
    /* Set up positioning */
    position: fixed;
    top: 0;
    left: 0;
}

div {
	height: auto; /*if more info comes on the page, it will stretch down*/
	width: 1000px;
	margin: 0 auto; /*this will cause the div to be in the center*/
}

form{
	position: fixed;
    width: 50%;
    height: auto;
	top: 40%;
	right: 10%;
}

input {
  	height: 40px;
    width: 400px;
    padding: 0 20px;
}

#linker{
	    position:absolute;

    text:decoration:none;
    bottom: 50%;
    text-align: center;
}

